@using Vaultex.Shared;
@model Result<List<Vaultex.Application.DTOs.Employee.Response.GetEmployeeResponse>>
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<div class="text-center">

    <div class="container">
        <h2>List of Employee</h2>
        <br />
        <div class="table-responsive">
            <table id="empDatatable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Organisation Number</th>
                        <th>FirstName</th>
                        <th>LastName</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Data.Any())
                    {
                        int i = 0;
                        foreach (var item in Model.Data)
                        {
                            i++;
                            <tr>
                                <td>@i</td>
                                <td>@item.OrganisationNumber</td>
                                <td>@item.FirstName</td>
                                <td>@item.LastName</td>
                            </tr>
                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts
    {
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#empDatatable").DataTable({
            });
        });
    </script>

}